{
  "name": "solana-paper-trader-extension",
  "version": "2.2.1",
  "description": "Paper trading overlay for Solana spot on Axiom and Terminal (Padre)",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "npm run build:axiom && npm run build:padre",
    "build:axiom": "esbuild src/platforms/axiom/boot.axiom.js --bundle --outfile=src/content.bundle.axiom.js --format=iife && esbuild src/platforms/axiom/bridge.axiom.js --bundle --outfile=src/bridge.bundle.axiom.js --format=iife",
    "build:padre": "esbuild src/platforms/padre/boot.padre.js --bundle --outfile=src/content.bundle.padre.js --format=iife && esbuild src/platforms/padre/bridge.padre.js --bundle --outfile=src/bridge.bundle.padre.js --format=iife",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write \"src/**/*.{js,css,html}\""
  },
  "devDependencies": {
    "esbuild": "^0.19.0",
    "eslint": "^8.50.0",
    "prettier": "^3.0.0"
  },
  "keywords": [
    "chrome-extension",
    "solana",
    "paper-trading",
    "trading",
    "cryptocurrency"
  ],
  "author": "",
  "repository": {
    "type": "git",
    "url": ""
  }
}